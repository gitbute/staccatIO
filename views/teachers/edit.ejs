<% include ../partials/header %>

<div class="container">
        <div class="row justify-content-center">
            <div class="col-md-12 text-center">
                <h1>Edit <%= teacher.name %></h1>
            </div>
            <div class="col-md-4">
                <form action="/teachers/<%= teacher._id %>?_method=PUT" method="POST">
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <input class="form-control" type="text" name="teacher[name]" placeholder="name" value="<%= teacher.name %>">
                        </div>
                        <div class="form-group col-md-12">
                            <input class="form-control" type="text" name="teacher[image]" placeholder="image-url" value="<%= teacher.image %>">
                        </div>
                        <div class="form-group col-md-12">
                            <input class="form-control" type="text" name="teacher[description]" placeholder="description" value="<%= teacher.description %>">
                        </div>
                        <button type="submit" class="btn btn-primary btn-lg btn-block">Submit!</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

<% include ../partials/footer %>