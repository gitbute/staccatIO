<% include ../partials/header %>

<div class="container">
    <header class="jumbotron">
        <h1><i class="material-icons">queue_music</i>Welcome to the Teacher Portal!</h1>
        <p>Browse our teachers for your music-needs</p>
        <p><a class="btn btn-primary btn-lg" href="/teachers/new">Add new teacher</a></p>
    </header>

    
    <div class="row">
        <% teachers.forEach(function(teacher){ %>
            <div class="col-md-3 col-sm-6"> 
                <div class="card text-center">
                    <img class="card-img-top" src="<%= teacher.image %>" alt="Teacher image">
                    <div class="card-body">
                        <h4 class="card-title"><%= teacher.name %></h4>
                    </div>
                    <p>
                        <a href="/teachers/<%= teacher._id %>" class="btn btn-primary">More Info!</a>
                    </p>
                </div>
            </div>
        <% }) %>
    </div>
</div>

<% include ../partials/footer %>